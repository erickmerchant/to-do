{
  "tasks": {
    "dev": "deno serve -A --port=4000 --watch-hmr flint.ts --dev",
    "build": "deno run -A flint.ts --build",
    "stage": {
      "command": "deno serve -A --port=4000 --parallel dist/serve.ts",
      "dependencies": ["build"]
    }
  },
  "imports": {
    "@flint/framework": "jsr:@flint/framework@^0.18.0",
    "@handcraft/lib": "jsr:@handcraft/lib@^1.7.1"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable", "es2023"]
  }
}
