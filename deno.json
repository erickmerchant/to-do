{
  "tasks": {
    "dev": "deno run -A --watch flint.ts dev --port=3000",
    "build": "deno run -A flint.ts build",
    "stage": {
      "command": "deno serve -A --port=3000 dist/serve.ts",
      "dependencies": ["build"]
    }
  },
  "imports": {
    "@flint/framework": "jsr:@flint/framework@^0.8.0",
    "@handcraft/lib": "jsr:@handcraft/lib@^1.0.0"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable", "es2023"]
  }
}
