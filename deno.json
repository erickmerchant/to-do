{
  "tasks": {
    "dev:build": "deno run -A flint.ts --dev",
    "build": "deno run -A flint.ts",
    "dev": {
      "command": "deno serve -A --port=4000 --watch-hmr dist/dev-serve.ts",
      "dependencies": ["dev:build"]
    },
    "stage": {
      "command": "deno serve -A --port=4000 --parallel dist/serve.ts",
      "dependencies": ["build"]
    }
  },
  "imports": {
    "@flint/framework": "jsr:@flint/framework@^0.14.0",
    "@handcraft/lib": "jsr:@handcraft/lib@^1.4.1"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable", "es2023"]
  }
}
