{
	"tasks": {
		"dev": "deno run -A flint.ts dev 3000",
		"build": "deno run -A flint.ts build",
		"stage": {
			"command": "deno serve -A --port=3000 dist/serve.ts",
			"dependencies": ["build"]
		}
	},
	"imports": {
		"@flint/framework": "jsr:@flint/framework@^0.1.6",
		"handcraft": "npm:handcraft"
	},
	"fmt": {
		"useTabs": true
	}
}
