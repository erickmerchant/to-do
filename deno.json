{
  "unstable": ["temporal", "bundle"],
  "tasks": {
    "dev": "deno serve -A --port=4000 --watch-hmr flint.ts --dev",
    "build": "deno run -A flint.ts --build",
    "stage": {
      "command": "deno serve -A --port=4000 --parallel dist/serve.ts",
      "dependencies": ["build"]
    }
  },
  "imports": {
    "@flint/framework": "jsr:@flint/framework@^0.26.1",
    "@handcraft/lib": "jsr:@handcraft/lib@^1.16.0",
    "@std/fs": "jsr:@std/fs@^1.0.23"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.window",
      "deno.unstable",
      "dom",
      "dom.iterable",
      "es2023"
    ]
  }
}
